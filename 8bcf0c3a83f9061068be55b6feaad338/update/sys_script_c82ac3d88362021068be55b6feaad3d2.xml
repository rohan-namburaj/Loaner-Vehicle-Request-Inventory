        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	var trackerSysID = current.vehicle_servicing; // get the sys_id of the linked Vehicle Tracker Record

	if (trackerSysID) {

		var vehtracker = new GlideRecord('x_1313534_lva_vehicle_tracker'); // GlideRecord for the Vehicle Tracker Table

		if (vehtracker.get(trackerSysID)) {
			// Set the Vehicle Status of the Vehucle Tracker to match the Servicing Ticket
			vehtracker.setValue('vehicle_status', current.vehicle_status)

			// Set the Ticket Status of the Vehicle Tracker to 'Closed'
			vehtracker.setValue('tracker_status', 'Closed')
			vehtracker.update(); // Save the Changes
	
		}
	}

})(current, previous);]]></script>
